@using ModelViews
@model ModelViews.ProductMv

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<CategoryMv> categories = ViewBag.Categories;
}

@section Scripts
{

    <script src="@Url.Content("~/")lib/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace('editor');
    </script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>
    <script>
        $('.select2').select2();
    </script>
}
<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Create Product</h1>
<!-- DataTales Example -->
<div class="card shadow mb-4">

    <div class="container">

        <div class=" my-5">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label class="control-label">Name</label>
                    <input name="Name" class="form-control" required />
                </div>

                <div class="form-group">
                    <label class="control-label"> Product Image </label>
                    <input name="filepImageProduct" type="file" class="form-control" />
                    <span class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="control-label"> Category </label>
                    <select name="CategoryId" class="form-control select2" required>
                        @foreach (var category in categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label class="control-label">Detail</label>
                    <textarea name="Detail" id="editor" class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <label class="control-label">Price</label>
                    <input type="number" name="Price" class="form-control" />
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

